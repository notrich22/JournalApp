@page
@model JournalWebApplication.Pages.UnauthorizedMethods.GetLessonsModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lesson[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lesson[0].dateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lesson[0].group.GroupName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Lesson)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.group.GroupName)
                </td>
            </tr>
        }
    </tbody>
</table>
